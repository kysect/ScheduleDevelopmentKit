<Window x:Class="ScheduleAggregator.Ui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScheduleAggregator.Ui"
        xmlns:customElements="clr-namespace:ScheduleAggregator.Ui.CustomElements"
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="1600">
    <StackPanel Orientation="Horizontal">
        <ListBox Name="OddItemList" Width="600"></ListBox>
        <ListBox Name="EvenItemList" Width="600"></ListBox>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBox Name="InputGroup" Text="M3101" Width="200" TextAlignment="Center"></TextBox>
                <Button Content="Add" Width="50" Click="Button_Click"></Button>
            </StackPanel>
            <ListBox Name="AddedGroupList" SelectionChanged="AddedGroupList_OnSelectionChanged"></ListBox>
        </StackPanel>
    </StackPanel>
</Window>
